version: '3.8'

# Production Docker Compose Configuration
# Uses pre-built image: kamilzafar/ict_agent
#
# Usage:
#   1. Copy this file: cp docker-compose.prod.yml.example docker-compose.prod.yml
#   2. Create .env file with your API keys
#   3. Run: docker-compose -f docker-compose.prod.yml up -d

services:
  api:
    image: kamilzafar/ict_agent:latest
    # Or use specific version: kamilzafar/ict_agent:v1.0.0
    container_name: ict_agent_api
    
    ports:
      - "8009:8009"  # Change if needed: "${API_PORT:-8009}:8009"
    
    environment:
      # ============================================
      # REQUIRED - API Keys
      # ============================================
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - PINECONE_API_KEY=${PINECONE_API_KEY}
      
      # ============================================
      # Optional Configuration
      # ============================================
      - PINECONE_INDEX_NAME=${PINECONE_INDEX_NAME:-default-index}
      - MODEL_NAME=${MODEL_NAME:-gpt-4o}
      - TEMPERATURE=${TEMPERATURE:-0.7}
      
      # ============================================
      # Memory & Storage
      # ============================================
      - MEMORY_DB_PATH=/app/memory_db
      - SUMMARIZE_INTERVAL=${SUMMARIZE_INTERVAL:-10}
      
      # ============================================
      # API Server Configuration
      # ============================================
      - API_HOST=0.0.0.0
      - API_PORT=8009
      - ENVIRONMENT=production
      
      # ============================================
      # Production Performance Settings
      # ============================================
      - WORKERS=${WORKERS:-4}
      - MAX_CONCURRENT=${MAX_CONCURRENT:-100}
      - KEEP_ALIVE=${KEEP_ALIVE:-120}
      - TIMEOUT=${TIMEOUT:-120}
      
      # ============================================
      # Logging
      # ============================================
      - LOG_LEVEL=${LOG_LEVEL:-info}
      
      # ============================================
      # CORS & Security
      # ============================================
      - CORS_ORIGINS=${CORS_ORIGINS:-*}
      - TRUSTED_HOSTS=${TRUSTED_HOSTS:-*}
      
      # ============================================
      # Nginx Proxy Configuration
      # ============================================
      - ROOT_PATH=${ROOT_PATH:-}
      
      # ============================================
      # MCP RAG Configuration
      # ============================================
      - MCP_RAG_SHEETS_URL=${MCP_RAG_SHEETS_URL:-https://www.ictpk.cloud/mcp/rag-sheets}
    
    volumes:
      # Persist memory database (required)
      - ./memory_db:/app/memory_db
      
      # Optional: Mount logs directory
      # - ./logs:/app/logs
    
    restart: unless-stopped
    
    # Health check configuration
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8009/health"]
      interval: 30s
      timeout: 120s
      retries: 3
      start_period: 40s  # Allow time for startup
    
    # Resource limits (adjust based on your server capacity)
    deploy:
      resources:
        limits:
          cpus: '4'      # Maximum 4 CPU cores
          memory: 8G     # Maximum 8GB RAM
        reservations:
          cpus: '2'      # Guaranteed 2 CPU cores
          memory: 4G     # Guaranteed 4GB RAM
    
    # Logging configuration
    logging:
      driver: "json-file"
      options:
        max-size: "10m"   # Rotate logs at 10MB
        max-file: "3"     # Keep 3 log files

